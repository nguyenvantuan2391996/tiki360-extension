{
  "name": "Tiki360 extension",
  "description": "The extension supports getting Tiki360's information: token, customer id, oder code,...and auto-buy insurance.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "icons": {
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js",
        "constants.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "manifest_version": 3
}